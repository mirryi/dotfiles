directory: {{ root }}
library: {{ home }}/.local/share/beets/library.db

import:
  move: no
  copy: no
  write: no

aunique:
  keys:
    - album
    - year
  bracket: "[]"

format_item: $album - $title
format_album: $album ($year)

sort_item: album+ disc+ track+
sort_album: album+

plugins:
  - edit
  - fetchart
  - info
  - mpdupdate
  - playlistc
  - scrub
  - smartplaylist
pluginpath:
  - {{ home }}/.local/share/beets/plugins

edit:
  itemfields:
    - album
    - albumartist
    - artist
    - composer
    - genre
    - grouping
    - title
    - track
    - year
  albumfields:
    - album
    - albumartist
    - year

fetchart:
  enforce_ratio: 0.5%
  cautious: yes
  sources:
    - filesystem
    - coverart
    - itunes
    - amazon
    - albumart

playlistc:
  playlist_dir: {{ playlists }}
  relative_to: {{ library }}

smartplaylist:
  playlist_dir: {{ playlists }}
  relative_to: {{ library }}
  playlists:
    - name: "_all.m3u"
      query: ""
    - name: "_%lower{$genre}.m3u"
      query: ""
