[core]
  pager = delta

[alias]
  wdiff = diff --word-diff
  pushall = !git remote | xargs -1 git push --all

[interactive]
  diffFilter = delta --color-only

[push]
  followTags = true
[pull]
  rebase = false

[credential]
  helper = cache --timeout=3600

[include]
  path = config.delta

[include]
  path = config.local
