######### VARIABLES #########
set $mod Mod1

set $up k
set $down j
set $left h
set $right l

######### STYLES #########
font pango:{{ .font.family }} {{ .font.size }}

# colors                border                      backgr                     text                      indic                           child_border
client.focused          {{ .colors.foc.border }}    {{ .colors.foc.indic }}    {{ .colors.foc.text }}    {{ .colors.foc.indic }}    {{ .colors.foc.cborder }}
client.focused_inactive {{ .colors.foc_in.border }} {{ .colors.foc_in.indic }} {{ .colors.foc_in.text }} {{ .colors.foc_in.indic }} {{ .colors.foc_in.cborder }}
client.unfocused        {{ .colors.unfoc.border }}  {{ .colors.unfoc.indic }}  {{ .colors.unfoc.text }}  {{ .colors.unfoc.indic }}  {{ .colors.unfoc.cborder }}
client.urgent           {{ .colors.urgent.border }} {{ .colors.urgent.indic }} {{ .colors.urgent.text }} {{ .colors.urgent.indic }} {{ .colors.urgent.cborder }}
client.placeholder      {{ .colors.ph.border }}     {{ .colors.ph.indic }}     {{ .colors.ph.text }}     {{ .colors.ph.indic }}     {{ .colors.ph.cborder }}

gaps inner {{ .gaps.inner }}
gaps outer {{ .gaps.outer }}

default_border pixel 1
hide_edge_borders smart

focus_follows_mouse no
mouse_warping none

######### PROGRAMS #########

##  exit program
bindsym $mod+Shift+q kill
bindsym $mod+Shift+w exec xkill

##  lock screen
bindsym $mod+Shift+x exec {{ .lockCommand }}

##  wallpaper
bindsym $mod+u exec wallpaper-ctl toggle

##  rofi menu
#   application runner
bindsym $mod+d exec rofi -show run
#   window switcher
bindsym $mod+Shift+d exec rofi -show window
#   ssh menu
bindsym $mod+g exec rofi -show ssh
#   network manager dmenu
bindsym $mod+Shift+g exec networkmanager_dmenu

##  terminal
#   open alacritty
bindsym $mod+t exec alacritty
#   file explorer
bindsym $mod+Shift+t exec alacritty -t "file browser" -e vifm
#   task manager
bindsym $mod+y exec alacritty -t "task manager" -e htop
#   music player
bindsym $mod+Shift+y exec alacritty -t "music player" -e ncmpcpp

##  control audio
#   mute
bindsym $mod+Shift+m exec pactl set-sink-mute $(pactl info | grep "Default Sink" | cut -d: -f2) toggle
#   decrease volume
bindsym $mod+Shift+v exec pactl set-sink-volume $(pactl info | grep "Default Sink" | cut -d: -f2) -2%
#   increase volume
bindsym $mod+v exec pactl set-sink-volume $(pactl info | grep "Default Sink" | cut -d: -f2) +2%
#   next track
bindsym $mod+n exec mpc next
#   previous track
bindsym $mod+Shift+n exec mpc prev
#   play/pause mpd
bindsym $mod+p exec mpc toggle
#   notify mpd status
bindsym $mod+m exec mpdnd --now

# battery
bindsym $mod+b exec notify-battery -f

# screenshot
bindsym $mod+i exec fscreenshot

######### MOVEMENT #########
# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+c split h

# split in vertical orientation
bindsym $mod+Shift+c split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
floating_modifier $mod

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+Shift+a focus child

# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# show the next scratchpad window or hide the focused scratchpad window
# if there are multiple scratchpad windows, this command cycles through them
bindsym $mod+minus scratchpad show

######### WORKSPACES #########

set $primary {{ .monitors.primary }}
set $secondary {{ .monitors.secondary }}

workspace 1 output $primary
workspace 2 output $secondary
workspace 3 output $primary
workspace 4 output $secondary
workspace 5 output $primary
workspace 6 output $secondary
workspace 7 output $primary
workspace 8 output $secondary
workspace 9 output $primary
workspace 10 output $secondary

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

######### MODES #########

# reload the configuration file
bindsym $mod+Ctrl+c reload
# restart i3 in-place
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exit

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $left       resize shrink width 5 px or 5 ppt
        bindsym $down       resize grow height 5 px or 5 ppt
        bindsym $up         resize shrink height 5 px or 5 ppt
        bindsym $right      resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left        resize shrink width 5 px or 5 ppt
        bindsym Down        resize grow height 5 px or 5 ppt
        bindsym Up          resize shrink height 5 px or 5 ppt
        bindsym Right       resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

mode "passthrough" {
    bindsym Mod4+Escape mode "default"
}

bindsym Mod4+Escape mode "passthrough"

######### STARTUP #########

# set wallpaper
exec --no-startup-id exec wallpaper-ctl kill

# start polybar
exec --no-startup-id exec launch-polybar

# start dunst
exec --no-startup-id exec dunst
