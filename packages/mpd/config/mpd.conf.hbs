music_directory     "{{ library }}"
playlist_directory  "{{ playlists }}"

pid_file            "{{ home }}/.local/share/mpd/pid"

bind_to_address     "127.0.0.1"

audio_output {
  type      "alsa"
  name      "mpd"
  device    "pulse"
}

audio_output {
  type      "fifo"
  name      "fifo"
  path      "/tmp/mpd.fifo"
  format    "44100:16:2"
}
