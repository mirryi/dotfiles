# Control
def_key "f"
  seek_forward
def_key "b"
  seek_backward
def_key "c"
  clear_playlist
def_key "c"
  clear_main_playlist


# Navigation
def_key "k"
  scroll_up
def_key "j"
  scroll_down
def_key "h"
  previous_column
def_key "h"
  master_screen
def_key "l"
  next_column
def_key "l"
  slave_screen
def_key "g"
  move_home
def_key "G"
  move_end
def_key "ctrl-b"
  page_up
def_key "ctrl-f"
  page_down
def_key "page_up"
  page_up
def_key "page_down"
  page_down
def_key "home"
  move_home
def_key "end"
  move_end
def_key "q"
  quit


# Finding
def_key "/"
  find_item_forward
def_key "?"
  find_item_backward
def_key "n"
  next_found_item
def_key "N"
  previous_found_item


# Selection
def_key "ctrl-v"
  select_range
def_key "v"
  reverse_selection
def_key "V"
  remove_selection
def_key "B"
  select_album


# Unset
def_key "."
  dummy
def_key ","
  dummy

