#
# attributes
#
snippet cfg! "#[cfg(?)]" b
#[cfg($1)]
endsnippet

snippet cfgf! "#[cfg(feature = ?)]" b
#[cfg(feature = "$1")]
endsnippet

#
# macro_rules
#
snippet mr! "macro_rules! ? {}" b
macro_rules! ${1:name} {
	${0:${VISUAL}}
}
endsnippet

#
# Shortcuts
#
snippet pri! "print!(?)" b
print!("$1"${2/..*/, /}$2);
endsnippet

snippet pln! "println!(?);" b
println!("$1"${2/..*/, /}$2);
endsnippet
