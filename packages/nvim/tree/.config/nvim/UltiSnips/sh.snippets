#
# if / else
#
snippet if "if ?; ... fi" b
if ${2:[[ ${1:cond} ]]}; then
	${0:${VISUAL}}
fi
endsnippet

snippet elif "elif ?; then ... " b
elif ${2:[[ ${1:cond} ]]}; then
	${0:${VISUAL}}
endsnippet

snippet else "else ..." b
else
	${0:${VISUAL}}
endsnippet

#
# function
#
snippet fn "? () {}" b
${1:name} () {
	${0:${VISUAL}}
}
endsnippet
