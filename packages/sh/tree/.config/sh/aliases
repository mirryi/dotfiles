#!/bin/sh
alias lsfzf="fzf --preview '([[ -f {} ]] && (bat --style=numbers --color=always {} || cat {})) || ([[ -d {} ]] && (tree -C {} | less)) || echo {} 2> /dev/null | head -200' --bind '?:toggle-preview' --preview-window=right:70%"

### REDEFINITIONS
alias ls="ls -a --color"

### SHORTCUTS
alias x="exit"
alias la="ls -al --color"

##  misc
wtm() {
  echo "scale=2; $(wc -w $1 | awk '{print $1}') / 130" | bc
}
