configuration {
  theme:             "themes/{{ .rofi.theme }}.rasi";
  terminal:          "alacritty";
  ssh-client:        "ssh";
  ssh-command:       "alacritty -e {ssh-client} {host}";

  width:             50;
  lines:             15;
  columns:           2;
  font:              "{{ .font }} 10";
  show-icons:        true;

  lazy-filter-limit: 15000;
  line-margin:       5;
  separator-style:   "dash";
  hide-scrollbar:    true;
  fullscreen:        false;
  dpi:               100;

  kb-row-up:         "Up";
  kb-row-down:       "Down";
}
